/* pages/comment/comment.wxss */
.product-item{
  display: flex;
  justify-content: center;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
  background: #fff; 
}
.product-item:last-child{
  border-bottom: none;
}
.item-image{
  width: 150rpx;
  height: 150rpx;
  padding: 20rpx;
}
.product-info{
  flex: 1;
  
}
.product-name {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
  margin: 20rpx;
}
.price-meta{
  display: flex;
  justify-content: flex-start;
  font-size: 30rpx;
  line-height: 42rpx;
  margin: 15rpx;
  font-weight: bolder;
}
.comment-title{
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
}
.comment-title, .item-content{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.9;
}
.item-name, .item-time{
  font-size: 20rpx;
  line-height: 28rpx;
  opacity: 0.4;
  margin-bottom: 10rpx;
}
.comment-list{
  background: #fff;
  display: flex;
  flex-direction: column-reverse;
}
.comment-card{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.item-right{
  flex: 1;
  padding: 20rpx;
}
.item-cnt{
  display: flex;
  justify-content: space-between;
}
.item-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}

.preview-item{
  width: 100rpx;
  height: 100rpx;
}