/* pages/trolley/trolley.wxss */
.trolley-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 24rpx;
}

.trolley-total {
  display: flex;
  align-items: center;
  padding-left: 35rpx;
  font-size: 32rpx;
}

.trolley-check-wrapper {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width:36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #ECECEE;
}

.trolley-check-wrapper.white {
  background: #FFFFFF;
}

.trolley-check-wrapper.check {
  background: #F5E069;
}

.trolley-check {
  width: 22rpx;
  height: 16rpx;
}

.trolley-total-text,
.trolley-edit {
  margin-left: 18rpx;
  margin-right: 33rpx;
  color: rgb(52, 55, 61, 0.8);
  font-size: 24rpx;
  line-height: 33rpx;
}

.product-list {
  position: absolute;
  left: 0;
  right: 0;
  top: 54rpx;
  bottom: 100rpx; 
  padding-bottom: 30rpx;
}

.product-card {
  display: flex;
  align-items: center;
  margin: 0 26rpx 26rpx;
  padding-left: 32rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.product-info {
  flex: 1;
  padding: 38rpx 28rpx 0 36rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.product-img {
  flex-shrink: 0;
  margin-left: 31rpx;
  width: 160rpx;
  height: 160rpx;
}

.product-name {
  color: rgba(29, 29, 38, 0.8);
}

.product-price {
  margin-top: 3rpx;
}

.product-count {
  text-align: right;
}

.product-count-edit {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.count-minus,
.count-add {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 50%;
  border: 3rpx solid #F6E474;
  text-align: center;
  font-size: 28rpx;
  font-weight: 900;
}

.count-now {
  margin: 0 18rpx;
}

.trolley-account {
  display: flex;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  padding-left: 24rpx;
  height: 100rpx;
  background: #fff;
}

.trolley-account-text {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 29rpx;
  color: rgba(52, 55, 61, 0.8);
  font-size: 24rpx;
  line-height: 33rpx;
}

.trolley-account-now {
  margin-left: 12rpx;
  font-size: 34rpx;
  line-height: 48rpx;
  color: #000000;
}

.pay-btn {
  width: 250rpx;
  height: 100%;
  background: #F5E069;
  color: rgba(52, 55, 61, 0.5);
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
}

.pay-btn.canpay {
  color: #34373D;
}
.trolley-empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; 
  margin: 30rpx 25rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  height: 380rpx;
}
.empty-image{
   width: 80rpx;
   height: 80rpx;
   margin-bottom: 20rpx;
}
.empty-text{
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.5;

}