<!--pages/add-comment/add-comment.wxml-->
<view class='product-item'>
  <image class='item-image' src='{{product.image}}' ></image>
    <view class='product-info'>
      <view class='product-name'>{{product.name}}</view>
          <view class='price-meta'>
            <view class='product-money' >￥</view>
            <view class='product-price'>{{product.price}}</view>
          </view>
    </view>
</view>
<view class='comment-cnt'>
 <textarea class='comment-ipt' placeholder-class='comment-plh' placeholder='请填写您的评价' auto-focus maxlength='255' bindinput='onInput'></textarea>
</view>
<view class="comment-btn {{!commentValue ? 'dis' : ''}}">提交评价</view>